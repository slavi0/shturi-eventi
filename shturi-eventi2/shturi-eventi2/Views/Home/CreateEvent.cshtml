@model shturi_eventi2.Models.Event

@{
    ViewData["Title"] = "Create Event";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Home" asp-action="CreateEvent" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Photo">Photo:</label>
        <input asp-for="Photo" type="file" class="form-control-file" />
    </div>
    <div class="form-group">
        <label asp-for="Date">Date:</label>
        <input asp-for="Date" type="datetime-local" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
